@{
  Layout = "_Layout";
}

@model HairSalon.Models.Appointment

<h2>Edit</h2>

<h4>Edit this appointment: @Html.DisplayFor(model => model.Time)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.AppointmentId)

    @Html.LabelFor(model => model.Time)
    @Html.EditorFor(model => model.Time)

    @Html.LabelFor(model => model.Client)
    @Html.DropDownList("ClientId")

    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")

    <input type="submit" value="Save" class="btn btn-primary"/>
}
<p>@Html.ActionLink("Back to list", "Index")</p>
