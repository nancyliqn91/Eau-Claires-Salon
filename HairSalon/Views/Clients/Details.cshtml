@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client
@using HairSalon.Models

<h2>Client Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h3>

<h3>@Html.DisplayNameFor(model => model.Stylist): @Html.DisplayFor(model => model.Stylist.EmployeeName)<h3>

@if (@Model.Appointments.Count == 0)
{
  <h3>No appointments have been added to this client yet!</h3>
} 
else
{
  <h3>Appointments:</h3>
  <ul>
    @foreach (Appointment appointment in Model.Appointments)
    {
      <li>@Html.ActionLink($"{appointment.Time}", "Details", "Appointments", new { id = appointment.AppointmentId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Edit Client", "Edit", new { id = Model.ClientId })</p>
<p>@Html.ActionLink("Delete Client", "Delete", new { id = Model.ClientId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>